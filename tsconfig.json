{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "declaration": true,
    "lib": ["ES2021"],
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "dist",
    "rootDir": "lib",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2021"
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}
